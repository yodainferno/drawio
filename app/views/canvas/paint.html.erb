<div class="container block mt-5 mb-5 text-center">
    <canvas id="canvas" class="mt-3"></canvas>
    
    
    <div class="row mt-3">
        <div class="col text-start">
            <%= label_tag :change_color, t(:pick_color), class: 'fs-5 mb-3' %>
            <input type="color" class="form-control form-control-color" id="change_color" value="#000">
        </div>
        <div class="col text-start">
            <%= label_tag :line_height, t(:pick_weight), class: 'fs-5 mb-3' %>
            <input type="range" class="form-range" min="1" max="6" value="3" id="line_height">
        </div>
    </div>

    <%= form_with url: save_paint_path do |form| %>
        <div class="row mt-4">        
            <%= form.text_field :line_points, value: @data, class: 'd-none' %>
            <%= form.text_field :id, value: @id, class: 'd-none' %>
        
            <div class="col-12 my-3">
                <%= form.text_field :name, value: @name, class: 'form-control', placeholder: 'NONAME' %>
            </div>
            <div class="col-6 form-check fs-5 ps-5">
                <%= form.label :private, t(:private_project), class: 'form-check-label' %>
                <%= form.check_box :private, checked: @private_doc, class: 'form-check-input' %>
            </div>
            <div class="col-6 form-check fs-5 ps-5">
                <%= form.label :active, t(:active_project), class: 'form-check-label' %>
                <%= form.check_box :active, checked: @active, class: 'form-check-input' %>
            </div>
            <div class="col-12 mt-3">
                <%= form.submit t(:save_pickture)+(@is_it_my ? '' : ' '+t(:as_copy)), class: "btn btn-primary w-100", id: 'save-canvas' %>
            </div>
        </div>
    <% end %>

    <div class="row mt-5">
        <div class="col-6">
            <a type="button" id="clear_button" class="d-block btn btn-danger"><%= t(:clear_canvas) %></a>
        </div>
        <div class="col-6">
            <a type="button" id="cancel_button" class="d-block btn btn-warning"><%= t(:back) %></a>
        </div>
    </div>

