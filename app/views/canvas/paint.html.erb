<div class="container block mt-5 mb-5 text-center">
    <canvas id="canvas" class="mt-3"></canvas>
    
    <div class="row mt-5">
        <div class="col">
            <%= form_with url: save_paint_path do |form| %>
                <%= form.text_field(:line_points, value: @data, class: 'd-none') %>
                <%= form.text_field(:id, value: @id, class: 'd-none') %>
                <%= form.submit("Сохранить картину", class: "btn btn-dark", id: 'save-canvas') %>
            <% end %>

            <a type="button" id="clear_button" class="d-block btn btn-danger">Очистить холст</button>
            <a type="button" id="redraw_button" class="d-block btn btn-warning mt-2">Нарисовать вновь</a>
            <a type="button" id="cancel_button" class="d-block btn btn-warning mt-2">Назад</a>
            <a href="" type="button" id="download_button" class="d-block btn btn-primary mt-2">Скачать файл</a>
        </div>
        <div class="col">
            <input type="color" class="form-control form-control-color" id="change_color" value="#000">
        </div>
        <div class="col">
            <input type="range" class="form-range" min="1" max="6" value="3" id="line_height">
        </div>
    </div>
</div>
